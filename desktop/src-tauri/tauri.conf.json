{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ESO Log Tool",
  "version": "0.3.9",
  "identifier": "com.esologtool.app",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:8080",
    "beforeBuildCommand": "trunk build --release",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ESO Log Tool",
        "width": 960,
        "height": 540,
        "minHeight": 540,
        "minWidth": 960,
        "hiddenTitle": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "windowEffects": {
          "effects": ["acrylic"]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
      "plugins": {
      "updater": {
        "windows": {
          "installMode": "passive"
        },
        "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlDNERFMUJGNDg2NDQ4OTIKUldTU1NHUkl2K0ZObk9nQnpFbTY4SHdwMFFITVJzc2pYRTd3U0RMTWhoTjErbGUwTmtYbXFhNnIK",
        "endpoints": [
          "https://github.com/sheumais/logs/releases/latest/download/latest.json"
        ]
      }
    }
}
